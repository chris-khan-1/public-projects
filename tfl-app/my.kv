<-MDDataTable>:
    background_color: 1, 1, 1, 1  # added for this example
    MDCard:
        id: container
        orientation: "vertical"
        elevation: root.elevation
        padding: "24dp", "0dp", "24dp", "0dp"
        # canvas added for this change
        canvas:
            Color:
                rgba: root.background_color
            Rectangle:
                size: self.size
                pos: self.pos